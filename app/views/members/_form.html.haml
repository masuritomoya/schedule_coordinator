= form_for(@member) do |f|
  - if @member.errors.any?
    #error_explanation
      %h2
        = pluralize(@member.errors.count, "error")
        prohibited this member from being saved:
      %ul
        - @member.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :group_id
    %br/
    = f.text_field :group_id
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .actions
    = f.submit
