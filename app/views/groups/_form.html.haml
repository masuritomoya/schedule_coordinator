= form_for(@group) do |f|
  - if @group.errors.any?
    #error_explanation
      %h2
        = pluralize(@group.errors.count, "error")
        prohibited this group from being saved:
      %ul
        - @group.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :event_id
    %br/
    = f.text_field :event_id
  .field
    = f.label :coordinated_at
    %br/
    = f.datetime_select :coordinated_at
  .actions
    = f.submit
